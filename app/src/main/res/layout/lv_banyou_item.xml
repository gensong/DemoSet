<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:id="@+id/ll_commit"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_lv_item_touxiang"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lunbo_03" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_lv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="田原" />

            <ImageView
                android:id="@+id/iv_lv_item_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/lunbo_03" />

            <ImageView
                android:id="@+id/iv_lv_item_shimingrenzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAlignBottom="true" />

            <ImageView
                android:id="@+id/baozheng"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/lunbo_03"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="3dp"/>
            
            <TextView 
                android:id="@+id/login_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(离线)"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"/>
            <TextView
                android:id="@+id/tv_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务中"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/bili_color_black"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"/>
            <!--保证金图标  -->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lv_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="伴游景点：橘子洲"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lv_item_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="可预约时间：7:00~12:00"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_lv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80元/小时"
            android:textColor="@color/bili_color_light_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 五颗星星 -->
            <!-- stepSize步长=""rating 默认选中的星数量="" -->

            <RatingBar
                android:id="@+id/bratingbarId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5" >
            </RatingBar>

            <TextView
                android:id="@+id/tv_lv_item_comment_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0分"
                android:textColor="#FFCF3B"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lv_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="5.6km"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>