<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.song.view.PercentCircleViewActivity"
    android:background="@color/bili_color_light_gray">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.demo.song.view.view.PercentCircleView
        android:id="@+id/percent_circle_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="25dp"
        app:circle_color="@android:color/holo_blue_bright"
        app:ring_color="@android:color/holo_blue_light"/>

    <com.demo.song.view.view.PercentCircleView
        android:id="@+id/percent_circle_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:radius="35dp"
        app:circle_color="@android:color/holo_red_light"
        app:ring_color="@android:color/holo_red_dark"/>

    <com.demo.song.view.view.PercentCircleView
        android:id="@+id/percent_circle_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:radius="45dp"
        app:circle_color="@android:color/holo_green_light"
        app:ring_color="@android:color/holo_green_dark"/>

    <com.demo.song.view.view.PercentCircleView
        android:id="@+id/percent_circle_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:radius="55dp"
        app:circle_color="@android:color/holo_orange_light"
        app:ring_color="@android:color/holo_orange_dark"/>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change"
        android:onClick="change"/>
</LinearLayout>
